@{
    ViewBag.Title = "Home Page";
}

<div class="hero-section" style="background-image: url('/Content/images/background.jpg'); background-size: cover; background-position: center; height: 500px;">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-md-6">
                <h1 class="text-white">Welcome to Our Airline</h1>
                <p class="text-white lead">Discover the world with comfort and style</p>
                <a href="@Url.Action("Index", "Flights")" class="btn btn-primary btn-lg">Book Now</a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="/Content/images/logo.png" class="card-img-top" alt="Popular Destinations">
                <div class="card-body">
                    <h5 class="card-title">Popular Destinations</h5>
                    <p class="card-text">Explore our most popular flight routes and dream destinations.</p>
                    <a href="#" class="btn btn-outline-primary">Explore Destinations</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="/Content/images/logo.png" class="card-img-top" alt="Special Offers">
                <div class="card-body">
                    <h5 class="card-title">Special Offers</h5>
                    <p class="card-text">Check out our latest deals and special promotions.</p>
                    <a href="#" class="btn btn-outline-primary">View Offers</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="/Content/images/logo.png" class="card-img-top" alt="Our Services">
                <div class="card-body">
                    <h5 class="card-title">Our Services</h5>
                    <p class="card-text">Learn about our premium services and amenities.</p>
                    <a href="#" class="btn btn-outline-primary">Discover More</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bg-light py-5 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Why Choose Us?</h2>
                <ul class="list-unstyled">
                    <li class="mb-3"><i class="fas fa-check text-primary"></i> Modern fleet of aircraft</li>
                    <li class="mb-3"><i class="fas fa-check text-primary"></i> Competitive prices</li>
                    <li class="mb-3"><i class="fas fa-check text-primary"></i> Excellent customer service</li>
                    <li class="mb-3"><i class="fas fa-check text-primary"></i> Extensive route network</li>
                </ul>
            </div>
            <div class="col-md-6">
                <img src="/Content/images/background.jpg" class="img-fluid rounded" alt="Our Aircraft">
            </div>
        </div>
    </div>
</div>